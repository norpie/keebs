#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/backlight.h>

// Include modular configuration files
#include "behaviors.dtsi"
#include "combos.dtsi"


/ {
  
  chosen {
    zmk,physical-layout = &layout_60_ansi;
  };

  keymap {
    compatible = "zmk,keymap";
    
    default_layer {
        // ------------------------------------------------------------------------------------------
        // | ESC |  1  |  2  |  3  |  4  |  5  |  6  |  7  |  8  |  9  |  0  |  -  |  =  |   BSPC   |
        // | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |   \     |
        // | CAPS  |GUI/A|ALT/S|SFT/D|CTL/F|  G  |  H  |CTL/J|SFT/K|ALT/L|GUI/;|  '  |     ENTER    |
        // |  ---     |  Z  |  X  |  C  |  V  |  B  |  N  |  M  |  ,  |  .  | /   |      ---      |
        // |  ---  |  ---  |  ---  |            SPACE               | --- | FN1 | FN2 |  ---   |
        // ------------------------------------------------------------------------------------------
      bindings = <

        &kp ESC &kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &kp N6 &kp N7 &kp  N8   &kp  N9 &kp  N0  &kp MINUS &kp EQUAL &kp BSPC
        &kp TAB  &kp Q  &kp W  &kp E  &kp R  &kp T  &kp Y  &kp U  &kp  I    &kp  O  &kp  P   &kp LBKT &kp RBKT   &kp BSLH
        &kp CAPS  &hml LGUI A  &hml LALT S  &hml LSHFT D  &hml LCTRL F  &kp G  &kp H  &hmr RCTRL J  &hmr RSHFT K    &hmr RALT L  &hmr RGUI SEMI &kp SQT            &kp RET
        &trans  &kp Z  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M  &kp COMMA &kp DOT &kp FSLH                &trans
        &trans &trans &trans            &kp SPACE                          &trans  &mo 1 &mo 2    &trans
      >;
    };

    fn {
        // ------------------------------------------------------------------------------------------
        // |GRAVE| F1  | F2  | F3  | F4  | F5  | F6  | F7  | F8  | F9  | F10 | F11 | F12 |    DEL   |
        // | ---  | --- | UP  | --- | --- | --- | --- | --- | INS | --- | --- | V- | V+ |   ---    |
        // | ---   |GUI/⬅|ALT/⬇|SFT/➡|CTL/F|GAME| --- |CTL/J|SFT/K|ALT/L|GUI/;| --- |     ---      |
        // |  ---     | --- | --- | --- | --- | --- | --- | --- | PREV | PLAY | NEXT |      ---     |
        // | --- | --- |  ---  |            ---                | --- | --- | --- | BOOT |
        // ------------------------------------------------------------------------------------------
      bindings = <
        &kp GRAVE &kp F1 &kp F2 &kp F3 &kp F4 &kp F5 &kp F6 &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &kp F12 &kp DEL
        &trans &trans &kp UP &trans &trans &trans &trans &trans &kp INS &trans &trans &kp C_VOL_DN &kp C_VOL_UP &trans
        &trans    &hml LGUI LEFT &hml LALT DOWN &hml LSHFT RIGHT &hml LCTRL F &tog 3 &trans &hmr RCTRL J &hmr RSHFT K &hmr RALT L &hmr RGUI SEMI &trans   &trans
        &trans   &trans &trans &trans &trans &trans &trans &trans &kp K_PREV &kp K_PP &kp K_NEXT &trans
        &trans &trans  &trans              &trans                            &trans   &trans   &trans &bootloader
      >;
    };
    
    bluetooth {
        // ------------------------------------------------------------------------------------------
        // | --- | BT1 | BT2 | BT3 | BT4 | BT5 | --- | --- | --- | --- | --- | --- | --- |BT_CLR/ALL|
        // | ---  | --- | BT5 | --- | --- | --- | --- | --- | --- | --- | --- | --- | --- |   ---    |
        // | ---   | --- | --- | --- | --- | --- | --- | BT1 | --- | BT4 | --- | --- |     ---      |
        // |  ---     | --- | --- | --- | BT3 | --- | --- | BT2 | --- | --- | --- |      ---     |
        // |BT_PRV |BT_NXT | ---   |            ---                | --- | --- |BOOT | --- |
        // ------------------------------------------------------------------------------------------
        // BT_CLR/ALL = Clear current profile, Shift+BT_CLR/ALL = Clear all profiles
      bindings = <
        &trans &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &trans &trans &trans &trans &trans &trans &trans &bt_bspc
        &trans &trans &bt BT_SEL 4 &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
        &trans &trans &trans &trans &trans &trans &trans &bt BT_SEL 0 &trans &bt BT_SEL 3 &trans &trans &trans
        &trans &trans &trans &trans &bt BT_SEL 2 &trans &trans &bt BT_SEL 1 &trans &trans &trans &trans
        &bt BT_PRV &bt BT_NXT &trans &trans &trans &trans &bootloader &trans
      >;
    };
    
    raw {
        // Raw layer - No homerow mods
        // Toggle on/off with FN+G
        // ------------------------------------------------------------------------------------------
        // | ESC |  1  |  2  |  3  |  4  |  5  |  6  |  7  |  8  |  9  |  0  |  -  |  =  |   BSPC   |
        // | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |   \     |
        // | CAPS  |  A  |  S  |  D  |  F  |  G  |  H  |  J  |  K  |  L  |  ;  |  '  |     ENTER    |
        // |  SHIFT    |  Z  |  X  |  C  |  V  |  B  |  N  |  M  |  ,  |  .  | /   |      SHIFT     |
        // |  CTL  |  GUI  |  ALT  |            SPACE                | ALT | FN1 | FN2 |  CTRL  |
        // ------------------------------------------------------------------------------------------
      bindings = <
        &kp ESC &kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &kp N6 &kp N7 &kp  N8   &kp  N9 &kp  N0  &kp MINUS &kp EQUAL &kp BSPC
        &kp TAB  &kp Q  &kp W  &kp E  &kp R  &kp T  &kp Y  &kp U  &kp  I    &kp  O  &kp  P   &kp LBKT &kp RBKT   &kp BSLH
        &kp CAPS  &kp A  &kp S  &kp D  &kp F  &kp G  &kp H  &kp J  &kp K    &kp L  &kp SEMI &kp SQT            &kp RET
        &kp LSHFT  &kp Z  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M  &kp COMMA &kp DOT &kp FSLH                &kp RSHFT
        &kp LCTRL &kp LGUI &kp LALT            &kp SPACE                          &kp RALT  &tog 3 &mo 2    &kp RCTRL
      >;
    };
    
  };
};
